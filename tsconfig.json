{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "esnext",
      "ESNext.AsyncIterable"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}